{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES6",
        "target": "es6",
        "jsx": "react",
        "declaration": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ],
            "~*": [
                "./src/*"
            ]
        },
        "outDir": "build"
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "test/*.ts",
        "test/**/*.ts"
    ]
}